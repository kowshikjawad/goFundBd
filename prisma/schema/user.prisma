enum Role {
  Donor
  CampaignOwner
  Admin
}

model User {
  user_id      String            @id @default(uuid())
  display_name String
  email        String         @unique
  password     String
  role         Role
  created_at   DateTime       @default(now())
  Campaign     Campaign[]
  Donation     Donation[]
  Comment      Comment[]
  Notification Notification[]
  Chat         Chat[]
}
