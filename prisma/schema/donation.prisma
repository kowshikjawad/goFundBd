model Donation {
  donation_id   Int      @id @default(autoincrement())
  amount        Float
  donation_date DateTime @default(now())
  user_id       Int
  campaign_id   Int

  user     User      @relation(fields: [user_id], references: [user_id])
  campaign Campaign  @relation(fields: [campaign_id], references: [campaign_id])
  Payment  Payment[]
}
